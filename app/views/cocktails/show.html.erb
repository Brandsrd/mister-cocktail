<p id="notice"><%= notice %></p>


<table cellspacing='0'>
  <thead>
    <tr class="even">
    <th><h1><%= @cocktail.name %></h1></th>
    <tr class="even">
    <th>Ingredient</th>
    <th>Dose</th>
    <!-- <th>Rating</th> -->
    <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @cocktail.doses.each do |dose| %>
    <tr class="even">
      <td><%= dose.ingredient %></td>
      <td><%= dose.description %></td>
      <td><%= link_to 'Destroy', cocktail_dose_path(@cocktail, dose) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>

  </tbody>
</table>


<%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
<%= link_to 'Back', cocktails_path %> |
<%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %>

