<%= simple_form_for(@cocktail) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: 'i.e. Caprinha' %>
    <p><%= f.label :picture %>
    <%= f.file_field :picture %></p>
  </div>



  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-primary" %>
  </div>


<% end %>
